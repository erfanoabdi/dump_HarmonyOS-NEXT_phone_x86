<audioUsageStrategy version="1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
    <adapter name="streamUsage">
        <strategy name="MEDIA_RENDER" streamUsage="STREAM_USAGE_UNKNOWN,STREAM_USAGE_MEDIA,STREAM_USAGE_MUSIC,STREAM_USAGE_MOVIE,STREAM_USAGE_GAME,STREAM_USAGE_AUDIOBOOK,STREAM_USAGE_NAVIGATION,STREAM_USAGE_ULTRASONIC,STREAM_USAGE_VOICE_MESSAGE"/>
        <strategy name="CALL_RENDER"  streamUsage="STREAM_USAGE_VOICE_COMMUNICATION,STREAM_USAGE_VOICE_MODEM_COMMUNICATION,STREAM_USAGE_VIDEO_COMMUNICATION"/>
        <strategy name="RING_RENDER"  streamUsage="STREAM_USAGE_ALARM,STREAM_USAGE_RINGTONE,STREAM_USAGE_RANGING,STREAM_USAGE_VOICE_RINGTONE"/>
        <strategy name="TONE_RENDER"  streamUsage="STREAM_USAGE_NOTIFICATION_RINGTONE,STREAM_USAGE_NOTIFICATION,STREAM_USAGE_ACCESSIBILITY,STREAM_USAGE_SYSTEM,STREAM_USAGE_DTMF,STREAM_USAGE_ENFORCED_TONE,STREAM_USAGE_VOICE_ASSISTANT"/>
    </adapter>
    <adapter name="sourceType">
        <strategy name="RECORD_CAPTURE" sourceType="SOURCE_TYPE_MIC,SOURCE_TYPE_VOICE_RECOGNITION,SOURCE_TYPE_WAKEUP,SOURCE_TYPE_ULTRASONIC"/>
        <strategy name="CALL_CAPTURE"  sourceType="SOURCE_TYPE_VOICE_COMMUNICATION,SOURCE_TYPE_VIRTUAL_CAPTURE,SOURCE_TYPE_VOICE_CALL"/>
        <strategy name="VOICE_MESSAGE"  sourceType="SOURCE_TYPE_VOICE_MESSAGE"/>
    </adapter>
</audioUsageStrategy>

